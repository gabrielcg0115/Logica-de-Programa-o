// Passos para fazer um sanduíche:

//Pegue duas fatias de pão.

//Passe maionese em uma das fatias.

//Coloque uma fatia de queijo.

//Coloque uma fatia de presunto.

//Feche o sanduíche com a outra fatia de pão.

//Corte ao meio (opcional).

//Sirva.

using System;

class Program
{
    static void Main()
    {
        Console.WriteLine("1. Pegue uma fatia de pão.");
        Console.WriteLine("2. Pegue outra fatia de pão.");
        Console.WriteLine("3. Passe maionese em uma das fatias.");
        Console.WriteLine("4. Coloque uma fatia de queijo.");
        Console.WriteLine("5. Coloque uma fatia de presunto.");
        Console.WriteLine("6. Feche o sanduíche com a outra fatia de pão.");
        Console.WriteLine("7. Corte o sanduíche ao meio (opcional).");
        Console.WriteLine("8. Sirva o sanduíche.");
    }
}
